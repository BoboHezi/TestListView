<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/control_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control" />

            <Button
                android:id="@+id/control_loading_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始" />
        </LinearLayout>

        <eli.per.view.VideoLoadingView
            android:id="@+id/control_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:loading_circleColor="#aa40a8cc"
            app:loading_circleRadius="20" />

        <eli.per.view.NetWorkSpeedView
            android:id="@+id/control_rate"
            android:layout_width="130dp"
            android:layout_height="30dp"
            app:rate_paintColor="#0e7e67"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp" />

        <eli.per.view.RSSIView
            android:id="@+id/control_rssi"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_gravity="center_vertical"
            app:rssi_lineColor="#0e7e67"
            app:rssi_textColor="#0e7e67" />
    </FrameLayout>
</LinearLayout>